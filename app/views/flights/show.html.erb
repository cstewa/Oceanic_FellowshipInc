<h1>Flying from <%= @flight.origin_airport.name %> to <%= @flight.destination_airport.name %> </h1>

<div id= "all_seats">

  <% @seating_chart.each do |row, seats| %>

    <div id= "seating-chart">
      <%= row %>
      <% seats.sort.each do |seat| %>
        <% if seat.user_id == nil %>
          <div class = "available" id = "<%= seat.seat_letter %><%= seat.row_number %>">
              <%= seat.seat_letter %>
          </div>
        <% else %>
          <div class = "unavailable" id = "<%= seat.row_number %><%= seat.seat_letter %>">
            <%= row %>
              <%= seat.seat_letter %>
          </div>
        <% end %>
      <% end %>
    </div>

  <% end %>

</div>



<% if current_user %>
  <%= link_to "Purchase", purchase_path(@flight.id), :remote => true %>
  <%= link_to "Round Trip", start_roundtrip_path(@flight.id), :remote => true %>
  <%= link_to "Multi City", start_multicity_path(@flight.id), :remote => true %>
<% end %>

