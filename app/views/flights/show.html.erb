<h1>Flying from <%= @flight.origin_airport.name %> to <%= @flight.destination_airport.name %> </h1>

<div id= "all_seats">

  <% @flight.seats.sort.each do |seat| %>
    <% if seat.user_id == nil %>
        <div class = "available" id = "<%= seat.row_number %><%= seat.seat_letter %>">
          <%= seat.seat_letter %>
        </div>
    <% else %>
      <div class = "unavailable" id = "<%= seat.row_number %><%= seat.seat_letter %>">
        <%= seat.seat_letter %>
      </div>
    <% end %>

  <% end %>

</div>
