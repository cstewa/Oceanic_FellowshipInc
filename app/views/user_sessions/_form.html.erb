<%= form_tag user_sessions_path, :method => :post, :remote => true do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>

    <%= hidden_field_tag(:flight_id, @flight.id) if @flight.present? %>
  <div class="actions">
    <%= submit_tag "Login", :class => "button" %>
  </div>
<% end %>